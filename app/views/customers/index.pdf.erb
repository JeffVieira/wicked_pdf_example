<h1>Listing Customers</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Cpf</th>
      <th>Occupation</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.cpf %></td>
        <td><%= customer.occupation %></td>
      </tr>
    <% end %>
  </tbody>
</table>
